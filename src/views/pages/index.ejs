<%- include('partials/header', { titulo: 'Bem-vindo ao Sistema' }) %>

<div class="text-center space-y-4">
  <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">Bem-vindo ao Sistema</h1>
  <p class="text-gray-600 dark:text-gray-300">Fa√ßa login para acessar seu painel.</p>
  <button
    onclick="irParaLogin()"
    class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
  >
    Entrar
  </button>
</div>

<script>
  function irParaLogin() {
    window.location.href = '/login';
  }

  // Redireciona automaticamente se j√° estiver logado
  const token = localStorage.getItem('token');
  if (token) {
    try {
      const payload = JSON.parse(atob(token.split('.')[1]));
      if (payload && payload.login) {
        window.location.href = '/dashboard_processos';
      }
    } catch (e) {
      localStorage.removeItem('token');
    }
  }
</script>

